# MCP Gateway Environment Variables
# Copy this file to .env and fill in your actual values

# Optional: The base URL for the Gateway server's public endpoint
# If not provided, defaults to http://localhost:{PORT} based on the bound hostname and port
# BASE_URL=http://localhost:3000

# Ragie Configuration
RAGIE_API_KEY=your_ragie_api_key_here
# Optional: Ragie API Base URL (defaults to https://api.ragie.ai/)
# RAGIE_BASE_URL=https://api.ragie.ai/

# WorkOS Configuration
# Get these from your WorkOS dashboard
WORKOS_API_KEY=your_workos_api_key_here
# The WorkOS AuthKit URL
WORKOS_AUTHORIZATION_SERVER_URL=
WORKOS_CLIENT_ID=your_workos_client_id_here

# Server Configuration
# Environment (development, production, etc.)
NODE_ENV=development

# Optional: Server port (defaults to 3000)
# PORT=3000

# Optional: Logging level - debug, info, warn, or error (defaults to info)
# LOG_LEVEL=info

# Optional: Log format - json or pretty (defaults to pretty)
# LOG_FORMAT=pretty

# Optional: Organization mapping configuration
# Path to a JSON file mapping organization IDs to Ragie partitions
# Path can be absolute or relative to the current working directory
# The file is loaded once at startup - changes require a restart
# Example mapping.json:
# {
#   "org_11111111111111111111111111": {
#     "partition": "soc2"
#   },
#   "org_22222222222222222222222222": {
#     "partition": "custom-partition",
#     "apiKey": "optional_ragie_api_key_for_this_org"
#   }
# }
# MAPPING_FILE=mapping.json

# Optional: Enable strict mapping mode (requires MAPPING_FILE)
# When enabled, only organizations defined in the mapping file are allowed
# STRICT_MAPPING=false

# Optional: Enable strict API key handling during mapping (default: false)
# When enabled, all organization mappings in MAPPING_FILE must include an apiKey field.
#
# Behavior with STRICT_MAPPING=true:
#   - All mappings must have an apiKey
#   - RAGIE_API_KEY is not used (can be omitted)
#   - Missing apiKey in any mapping will cause startup failure
#
# Behavior with STRICT_MAPPING=false:
#   - All mappings in MAPPING_FILE must have an apiKey
#   - RAGIE_API_KEY must be set (used as fallback for organizations not in mapping file)
#   - Missing apiKey in any mapping will cause startup failure
#
# When disabled (default):
#   - Mappings can optionally include apiKey
#   - Organizations without apiKey in mapping will use RAGIE_API_KEY
#   - RAGIE_API_KEY must be set
# STRICT_API_KEYS=false